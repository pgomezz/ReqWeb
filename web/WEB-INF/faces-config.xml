<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <resource-bundle>
            <base-name>/MyBundle</base-name>
            <var>myBundle</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>/project</base-name>
            <var>project</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>/bundle_nfrType</base-name>
            <var>bundle_nfrType</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>/bundle_requirement</base-name>
            <var>bundle_requirement</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>/crudLabels</base-name>
            <var>crudLabels</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>/organization</base-name>
            <var>organization</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>/user</base-name>
            <var>user</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>/role</base-name>
            <var>role</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>/business</base-name>
            <var>business</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>/client</base-name>
            <var>client</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>/Bundle</base-name>
            <var>bundle</var>
        </resource-bundle>
        
    </application>
    <navigation-rule>
        <from-view-id>/login.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{authBean.loginUser}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/indexProj.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{authBean.loginUser}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
